@import './variables'
@import '../node_modules/vuetify/src/stylus/main'

table.table tbody td {
  font-weight: lighter;
}

.datatable td a {
  text-decoration: none;
}

.input-group.input-group--selection-controls.switch .input-group--selection-controls__container .input-group--selection-controls__toggle {
  height: 20px;
  border-radius: 10px;
  opacity: 1;
}

.application--light .input-group.input-group--selection-controls.switch .input-group--selection-controls__ripple--active:after {
  background-color: $material-theme.background;
}

.card--hover {
  transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.card--hover:hover {
  transform: scale(1.05);
  z-index: 1;
}

.list__tile .chip .avatar {
  min-width: initial;
  justify-content: center;
}

.stepper__header {
  border-bottom: solid 1px $material-twelve-percent-dark;
  box-shadow: none;
}

.stepper__content {
  height: calc(100% - 73px); // 73 => 72 (size of the .stepper__header) + 1 (size of the border)
  overflow: scroll;
}

@media $display-breakpoints.md-and-up {
  .toolbar__side-icon {
    display: none;
  }
}

.dialog > .card > .card__text,
.dialog > .card > .scrollable {
  height: 500px;
  overflow: scroll;
}

.truncate {
  text-overflow: ellipsis;
  overflow: hidden;
}
